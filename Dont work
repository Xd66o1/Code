#include <Arduino.h>


const int buttonPin = 2; // Pin przycisku (D2)
const int relayPin = 4;  // Pin przekaźnika (D4)
const int ledPin = 2;    // Pin diody LED (D5) - zmieniono na inny pin, aby uniknąć konfliktu z buttonPin


bool relayState = false;  // Początkowy stan przekaźnika (wyłączony)
bool lastButtonState = HIGH; // Ostatni stan przycisku

void setup() {
  
  pinMode(buttonPin, INPUT_PULLUP);
  pinMode(relayPin, OUTPUT);
  pinMode(ledPin, OUTPUT);

  
  digitalWrite(relayPin, LOW);
  digitalWrite(ledPin, HIGH); // Włącz diodę LED, gdy przekaźnik jest wyłączony
}

void loop() {
  
  bool buttonState = digitalRead(buttonPin);

  
  if (buttonState == LOW && lastButtonState == HIGH) {
    
    relayState = !relayState;
    digitalWrite(relayPin, relayState ? HIGH : LOW);
    digitalWrite(ledPin, relayState ? LOW : HIGH);
    delay(50);
  }

  lastButtonState = buttonState;
}
